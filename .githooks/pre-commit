#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored messages
print_message() {
    echo -e "${2}${1}${NC}"
}

# Function to check if a command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Check if we're in a git repository
if ! git rev-parse --is-inside-work-tree > /dev/null 2>&1; then
    print_message "âŒ Not a git repository!" "$RED"
    exit 1
fi

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d)

# Skip if no files are staged
if [ -z "$STAGED_FILES" ]; then
    print_message "â„¹ï¸ No files staged for commit. Skipping checks." "$YELLOW"
    exit 0
fi

# Run Laravel Pint
print_message "ğŸ” Running Laravel Pint (code style checker)..." "$YELLOW"
if ! command_exists "./vendor/bin/pint"; then
    print_message "âŒ Laravel Pint not found. Please install it first." "$RED"
    exit 1
fi

./vendor/bin/pint --test
PINT_STATUS=$?

if [ $PINT_STATUS -ne 0 ]; then
    print_message "âŒ Code style issues found! Fix them before committing." "$RED"
    print_message "ğŸ’¡ Run './vendor/bin/pint' to automatically fix the issues." "$YELLOW"
    exit 1
fi

print_message "âœ… Code style check passed!" "$GREEN"

## Run PHPStan (if installed)
#if command_exists "./vendor/bin/phpstan"; then
#    print_message "ğŸ” Running PHPStan (static analysis)..." "$YELLOW"
#    ./vendor/bin/phpstan analyse --no-progress
#    PHPSTAN_STATUS=$?
#
#    if [ $PHPSTAN_STATUS -ne 0 ]; then
#        print_message "âŒ Static analysis issues found! Fix them before committing." "$RED"
#        exit 1
#    fi
#    print_message "âœ… Static analysis passed!" "$GREEN"
#fi
#
## Run tests (if in a Laravel project)
#if [ -f "vendor/bin/pest" ]; then
#    print_message "ğŸ” Running tests..." "$YELLOW"
#    ./vendor/bin/pest --parallel
#    TEST_STATUS=$?
#
#    if [ $TEST_STATUS -ne 0 ]; then
#        print_message "âŒ Tests failed! Fix them before committing." "$RED"
#        exit 1
#    fi
#    print_message "âœ… Tests passed!" "$GREEN"
#fi

print_message "âœ¨ All checks passed! You can commit your changes." "$GREEN"
exit 0
